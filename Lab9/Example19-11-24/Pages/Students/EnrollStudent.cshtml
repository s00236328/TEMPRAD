@page
@model EnrollStudentModel
@{
    ViewData["Title"] = "Enroll Student";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="CourseId">Course</label>
        <select id="CourseId" name="CourseId" class="form-control" asp-for="CourseId">
            <option value="">Select a course</option>
            @foreach (var course in Model.Courses)
            {
                <option value="@course.Value">@course.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="StudentId">Student</label>
        <select id="StudentId" name="StudentId" class="form-control" asp-for="StudentId">
            <option value="">Select a student</option>
            @foreach (var student in Model.StudentsList)
            {
                <option value="@student.Value">@student.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Enroll</button>
</form>
