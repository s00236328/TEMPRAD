@page
@model Example19_11_24.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Credits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Credits)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Department.Name)
        </dd>
    </dl>
</div>

<h6>Students enrolled:</h6>
<ul>
    @foreach (var item in Model.Course.Students)
    {
        <li><a asp-page="/Students/Details" asp-route-id="@item.StudentId">@Html.Raw(item.FirstName)</a></li>
    }
</ul>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course.CourseId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
