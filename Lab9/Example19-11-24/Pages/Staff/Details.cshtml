@page
@model Example19_11_24.Pages.Staff.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Faculty</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faculty.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faculty.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faculty.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faculty.Email)
        </dd>
    </dl>
</div>

<h6>Courses Taught:</h6>
<ul>
    @foreach (var item in Model.Faculty.Courses)
    {
    <li><a asp-page="/Courses/Details" asp-route-id="@item.CourseId">@Html.Raw(item.Name)</a></li>
    }
</ul>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Faculty.FacultyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
